%p#notice= notice
%h1 Negatives
%table
  %thead
    %tr
      %th Title
      %th Description
      %th When
      %th{:colspan => "3"}
  %tbody
    - @negatives.each do |negative|
      %tr
        %td= negative.title
        %td= negative.description
        %td= negative.when
        %td= link_to 'Show', negative
        %td= link_to 'Edit', edit_negative_path(negative)
        %td= link_to 'Destroy', negative, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Negative', new_negative_path
