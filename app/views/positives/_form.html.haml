= form_for(positive) do |f|
  - if positive.errors.any?
    #error_explanation
      %h2
        = pluralize(positive.errors.count, "error")
        prohibited this positive from being saved:
      %ul
        - positive.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :when
    = f.datetime_select :when
  .actions
    = f.submit
